<body>

<%include header.ejs%>

<!-- Main jumbotron for a primary marketing message or call to action -->
<div class="container">
    <div class="row col-lg-6">
        <h1>欢迎注册</h1>
    <form>
        <div class="form-group">
            <label for="exampleInputEmail1">用户名</label>
            <input type="text" class="form-control" id="username" placeholder="请输入用户名">
        </div>
        <div class="form-group">
            <label for="password">密码</label>
            <input type="password" class="form-control" id="password" placeholder="请输入密码">
        </div>
        <div class="checkbox">
            <label>
                <input type="checkbox"> 我同意协议
            </label>
        </div>
        <button type="button"id="zhuce" class="btn btn-default">注册</button>
    </form>
        <div class="alert alert-danger" role="alert" id='cuowukuang'>
            用户被占用
        </div>
    </div>
</div>


<script src="js/jquery-1.11.3.min.js"></script>
<script src="js/bootstrap.min.js"></script>
<script type="text/javascript" src="js/underscore-noflect.js"></script>

<script>
    $("#username").on('focus',function(){
        $("#cuowukuang").fadeOut(200);
    })
    $("#zhuce").click(function(){
        $.post("/doregist",{
            "username":$("#username").val(),
            "password":$("#password").val()
        },function(result){
            if(result=='1'){
                //注册成功
                alert('注册成功!将自动跳转到首页');
                window.location = '/';
            }else if(result=='-1'){
               $("#cuowukuang").fadeIn(200);
               $("#cuowukuang").html('用户名被占用');
            }
        })
    })
</script>
</body>
</html>
